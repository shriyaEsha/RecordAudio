<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="#ff090909">


    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/startRec"
        android:layout_below="@+id/progressBar1"
        android:layout_marginTop="15dip"
        android:layout_weight="0.09"
        android:textColor="#ffffffff"
        android:background="#ff080808"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:checked="false" />

    <EditText
        android:gravity="top"
        android:layout_width="wrap_content"
        android:layout_height="465dip"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/editme"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@android:color/background_dark"
        android:editable="true"
        android:elegantTextHeight="true"
        android:linksClickable="true"
        android:longClickable="true"
        android:nestedScrollingEnabled="true"
        android:typeface="sans"
        android:visibility="visible"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#ffffffff"
        android:layout_below="@+id/customspinner" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar1"
        android:indeterminate="false"
        android:background="#ffff2c3a"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="120dip"
        android:layout_height="42dip"
        android:text="SHARE"
        android:id="@+id/shareText"
        android:layout_marginTop="18dip"
        android:layout_below="@+id/startRec"
        android:background="#ffeec92b"
        style="@android:style/Animation.Translucent" />

    <Button
        android:layout_width="120dip"
        android:layout_height="42dip"
        android:text="SAVE"
        android:id="@+id/saveText"
        android:background="#ffeec92b"
        style="@android:style/Animation.Translucent"
        android:layout_alignTop="@+id/clearText"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="120dip"
        android:layout_height="42dip"
        android:text="CLEAR"
        android:id="@+id/clearText"
        android:layout_marginTop="18dip"
        android:layout_below="@+id/startRec"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#ffeec92b"
        style="@android:style/Animation.Translucent" />
    <Spinner
        android:id="@+id/customspinner"
        android:layout_width="120dip"
        android:layout_height="30dip"
        android:background="#ffffff"
        android:layout_below="@+id/shareText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="left"
        android:clickable="true"
        android:contentDescription="Languages"
        android:spinnerMode="dropdown"

        android:dropDownSelector="@android:color/darker_gray"
        android:paddingLeft="-10dip"/>

</RelativeLayout>